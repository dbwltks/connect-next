              setIsAttendanceEventDialogOpen(false);
            }}>
              {selectedAttendanceEvent ? "수정" : "추가"}
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>

      {/* 식단 설정 다이얼로그 */}
      <Dialog open={isMealSettingsOpen} onOpenChange={setIsMealSettingsOpen}>
        <DialogContent className="max-w-2xl">
          <DialogHeader>
            <DialogTitle>식단 설정</DialogTitle>
            <DialogDescription>
              식단 카테고리를 관리하세요. (예: 아침, 점심, 저녁, 간식 등)
            </DialogDescription>
          </DialogHeader>
          
          <div className="space-y-4">
            {/* 카테고리 목록 */}
            <div className="space-y-3">
              {mealCategories
                .sort((a, b) => a.order - b.order)
                .map((category) => (
                  <div key={category.id} className="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                    <div className="flex items-center gap-3">
                      <div 
                        className="w-4 h-4 rounded-full" 
                        style={{ backgroundColor: category.color }}
                      />
                      <span className="font-medium">{category.name}</span>
                    </div>
                    <div className="flex gap-2">
                      <Button size="sm" variant="ghost" onClick={() => {
                        setSelectedMealCategoryEdit(category);
                        setMealCategoryForm({
                          name: category.name,
                          color: category.color,
                          order: category.order,
                        });
                      }}>
                        <Edit className="h-4 w-4" />
                      </Button>
                      <Button size="sm" variant="ghost" onClick={() => {
                        if (confirm("정말로 이 카테고리를 삭제하시겠습니까?")) {
                          const updatedCategories = mealCategories.filter(c => c.id !== category.id);
                          setMealCategories(updatedCategories);
                          // Supabase에 저장
                          saveMealCategories(programId, updatedCategories);
                        }
                      }}>
                        <Trash2 className="h-4 w-4" />
                      </Button>
                    </div>
                  </div>
                ))}
            </div>
            
            {/* 카테고리 추가/편집 폼 */}
            <div className="border-t pt-4 space-y-3">
              <div className="grid grid-cols-3 gap-3">
                <div>
                  <Label>카테고리명</Label>
                  <Input
                    value={mealCategoryForm.name}
                    onChange={(e) => setMealCategoryForm({ ...mealCategoryForm, name: e.target.value })}
                    placeholder="카테고리명 입력"
                  />
                </div>
                <div>
                  <Label>색상</Label>
                  <Input
                    type="color"
                    value={mealCategoryForm.color}
                    onChange={(e) => setMealCategoryForm({ ...mealCategoryForm, color: e.target.value })}
                  />
                </div>
                <div>
                  <Label>순서</Label>
                  <Input
                    type="number"
                    value={mealCategoryForm.order}
                    onChange={(e) => setMealCategoryForm({ ...mealCategoryForm, order: parseInt(e.target.value) || 0 })}
                    placeholder="순서"
                  />
                </div>
              </div>
              <div className="flex gap-2">
                <Button size="sm" onClick={() => {
                  if (mealCategoryForm.name.trim()) {
                    let updatedCategories;
                    if (selectedMealCategoryEdit) {
                      updatedCategories = mealCategories.map(c => 
                        c.id === selectedMealCategoryEdit.id 
                          ? { ...c, name: mealCategoryForm.name, color: mealCategoryForm.color, order: mealCategoryForm.order }
                          : c
                      );
                    } else {
                      updatedCategories = [...mealCategories, {
                        id: Date.now().toString(),
                        name: mealCategoryForm.name,
                        color: mealCategoryForm.color,
                        order: mealCategoryForm.order,
                      }];
                    }
                    setMealCategories(updatedCategories);
                    // Supabase에 저장
                    saveMealCategories(programId, updatedCategories);
                    setMealCategoryForm({ name: "", color: "#3B82F6", order: 0 });
                    setSelectedMealCategoryEdit(null);
                  }
                }}>
                  {selectedMealCategoryEdit ? "수정" : "추가"}
                </Button>
                <Button size="sm" variant="outline" onClick={() => {
                  setMealCategoryForm({ name: "", color: "#3B82F6", order: 0 });
                  setSelectedMealCategoryEdit(null);
                }}>
                  취소
                </Button>
              </div>
            </div>
          </div>
          
          <DialogFooter>
            <Button onClick={() => setIsMealSettingsOpen(false)}>
              완료
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>

      {/* 식단 추가/편집 다이얼로그 */}
      <Dialog open={isMealDialogOpen} onOpenChange={setIsMealDialogOpen}>
        <DialogContent className="max-w-lg">
          <DialogHeader>
            <DialogTitle>{selectedMealEdit ? "식단 편집" : "식단 추가"}</DialogTitle>
            <DialogDescription>
              식단 정보를 입력하세요.
            </DialogDescription>
          </DialogHeader>
          <div className="space-y-4">
            <div>
              <Label htmlFor="mealName">음식명</Label>
              <Input
                id="mealName"
                value={mealForm.name}
                onChange={(e) => setMealForm({ ...mealForm, name: e.target.value })}
                placeholder="음식명을 입력하세요"
              />
            </div>
            <div>
              <Label htmlFor="mealCategory">카테고리</Label>
              <Select value={mealForm.categoryId} onValueChange={(value) => setMealForm({ ...mealForm, categoryId: value })}>
                <SelectTrigger>
                  <SelectValue placeholder="카테고리 선택" />
                </SelectTrigger>
                <SelectContent>
                  {mealCategories
                    .sort((a, b) => a.order - b.order)
                    .map((category) => (
                      <SelectItem key={category.id} value={category.id}>
                        <div className="flex items-center gap-2">
                          <div 
                            className="w-3 h-3 rounded-full" 
                            style={{ backgroundColor: category.color }}
                          />
                          {category.name}
                        </div>
                      </SelectItem>
                    )) : null}
                </SelectContent>
              </Select>
            </div>
            <div>
              <Label htmlFor="mealDescription">설명</Label>
              <Textarea
                id="mealDescription"
                value={mealForm.description}
                onChange={(e) => setMealForm({ ...mealForm, description: e.target.value })}
                placeholder="음식에 대한 간단한 설명"
                rows={2}
              />
            </div>
            <div>
              <Label>재료</Label>
              <div className="space-y-2">
                <div className="flex gap-2">
                  <Input
                    value={newIngredient}
                    onChange={(e) => setNewIngredient(e.target.value)}
                    placeholder="재료 입력"
                    onKeyPress={(e) => {
                      if (e.key === 'Enter' && newIngredient.trim()) {
                        setMealForm({
                          ...mealForm,
                          ingredients: [...mealForm.ingredients, newIngredient.trim()]
                        });
                        setNewIngredient("");
                      }
                    }}
                  />
                  <Button
                    type="button"
                    variant="outline"
                    size="sm"
                    onClick={() => {
                      if (newIngredient.trim()) {
                        setMealForm({
                          ...mealForm,
                          ingredients: [...mealForm.ingredients, newIngredient.trim()]
                        });
                        setNewIngredient("");
                      }
                    }}
                  >
                    추가
                  </Button>
                </div>
                {mealForm.ingredients.length > 0 && (
                  <div className="flex flex-wrap gap-1">
                    {mealForm.ingredients.map((ingredient, index) => (
                      <Badge key={index} variant="secondary" className="text-xs">
                        {ingredient}
                        <button
                          type="button"
                          onClick={() => {
                            setMealForm({
                              ...mealForm,
                              ingredients: mealForm.ingredients.filter((_, i) => i !== index)
                            });
                          }}
                          className="ml-1 hover:text-red-500"
                        >
                          ×
                        </button>
                      </Badge>
                    )) : null}
                  </div>
                )}
              </div>
            </div>
            <div>
              <Label htmlFor="mealNotes">메모</Label>
              <Textarea
                id="mealNotes"
                value={mealForm.notes}
                onChange={(e) => setMealForm({ ...mealForm, notes: e.target.value })}
                placeholder="조리법이나 특별한 메모"
                rows={3}
              />
            </div>
          </div>
          <DialogFooter>
            <Button variant="outline" onClick={() => setIsMealDialogOpen(false)}>
              취소
            </Button>
            <Button onClick={() => {
              if (!mealForm.name.trim()) {
                alert("음식명을 입력해주세요.");
                return;
              }
              if (!mealForm.categoryId) {
                alert("카테고리를 선택해주세요.");
                return;
              }

              const newMeal: MealItem = {
                id: selectedMealEdit?.id || Date.now().toString(),
                categoryId: mealForm.categoryId,
                name: mealForm.name,
                description: mealForm.description || undefined,
                ingredients: mealForm.ingredients.length > 0 ? mealForm.ingredients : undefined,
                notes: mealForm.notes || undefined,
              };

              setMealPlans(prevPlans => {
                const existingPlan = prevPlans.find(plan => plan.date === selectedMealDate);
                let updatedPlans;
                
                if (existingPlan) {
                  if (selectedMealEdit) {
                    // 기존 식단 수정
                    updatedPlans = prevPlans.map(plan => 
                      plan.date === selectedMealDate 
                        ? { ...plan, meals: plan.meals.map(meal => 
                            meal.id === selectedMealEdit.id ? newMeal : meal
                          )}
                        : plan
                    );
                  } else {
                    // 기존 날짜에 식단 추가
                    updatedPlans = prevPlans.map(plan => 
                      plan.date === selectedMealDate 
                        ? { ...plan, meals: [...plan.meals, newMeal] }
                        : plan
                    );
                  }
                } else {
                  // 새로운 날짜에 식단 추가
                  updatedPlans = [...prevPlans, {
                    id: Date.now().toString(),
                    date: selectedMealDate,
                    meals: [newMeal]
                  }];
                }

                // Supabase에 저장
                saveMealPlans(programId, updatedPlans);
                
                return updatedPlans;
              });

              setIsMealDialogOpen(false);
              setMealForm({
                name: "",
                categoryId: "",
                description: "",
                ingredients: [],
                notes: "",
              });
              setNewIngredient("");
            }}>
              {selectedMealEdit ? "수정" : "추가"}
            </Button>
          </DialogFooter>
        </DialogContent>
      </Dialog>
    </div>
  );
}